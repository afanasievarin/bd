<li class="imdiz-product">
    <div class="imdiz-product__inner">                
        <!--!<div class="imdiz-product__image-wrap">-->
            <a href="/" class="imdiz-product__img-link">
                <img src={{item.itemimagepath}} alt="Изображение продукта">
            </a>                    
        <!--</div>-->
        <div class="imdiz-product__info">
            <a href="/itempage/{{item.itemID}}" class="imdiz-product__name">{{item.itemname}}</a>	
            <p class="imdiz-product__av">
						<i class="fa fa-check" aria-hidden="true"></i>
						<span>{{item.itemstatusname}}</span>
					</p>       
            <p class="imdiz-product__price">
                <span class="imdiz-product__cost">{{item.itemprice}}</span>
            </p>
        </div>
        {{#isEquals token.role "0"}}
        <form class="imdiz-product__buy-form">
            <input type="hidden">
            <button type="submit" id="order-btn" class="imdiz-product__submit" value="{{item.itemID}}">В корзину</button>
        </form>
        {{/isEquals}}
    </div>
</li>
