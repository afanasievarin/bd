<li class="imdiz-product">
    <div class="imdiz-product__inner">                
        <!--!<div class="imdiz-product__image-wrap">-->
            <a href="/" class="imdiz-product__img-link">
                <img src="{{item.itemimagepath}}" alt="Изображение продукта">
            </a>                    
        <!--</div>-->
        <div class="imdiz-product__info">
            <a href="/rentitempage/{{item.itemID}}" class="imdiz-product__name">{{item.itemname}}</a>	
            <p class="imdiz-product__av">
						<i class="fa fa-check" aria-hidden="true"></i>
						<span>Статус: {{item.itemstatusname}}</span>
					</p>       
            <p class="imdiz-product__price">
                <span class="imdiz-product__cost">Цена: {{item.itemprice}}</span>
            </p>

        </div>
        <form class="imdiz-product__buy-form">
            <input type="hidden">
            <button type="submit" id="rent-btn" class="imdiz-product__submit" value="{{item.itemID}}">Арендовать</button>
        </form>
    </div>
</li>